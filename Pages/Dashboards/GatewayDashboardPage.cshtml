
@page "/GatewayDashboardPage"
@model USAIDICANBLAZOR.Pages.Dashboards.GatewayDashboardPageModel
@using USAIDICANBLAZOR.Models;
@using USAIDICANBLAZOR.Data;
@inject UserManagement userManagement;

@{
    ViewData["Title"] = "USAIDICANBLAZOR";
    //Layout = "~/Shared/_DashboardLayout.cshtml";
}
<link rel="stylesheet" rel='nofollow' href="~/dashboard/themes/default-theme/bootstrap.min.css" />
<link rel="stylesheet" rel='nofollow' href="~/dashboard/themes/default-theme/ej.dashboardViewer.all.min.css" />
@*<link href="~/css/material.css" rel="stylesheet" />*@
<script src="~/dashboard/scripts/jquery-1.10.2.min.js"></script>
<script src="~/dashboard/scripts/jquery.easing.1.3.min.js"></script>
<script src="~/dashboard/scripts/ej.dashboardViewer.all.min.js"></script>
@*<script src="~/js/ej2.min.js"></script>*@

<style>

    body, html {
        height: 100%;
        width: 100%;
        padding: 5px;
    }

    h4 {
        color: red;
        text-align: center;
        font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif
    }
</style>


<div class="container" style="margin-top:10px;">
    @if (userManagement.GetRoleName().Contains("ADMINISTRATOR") || userManagement.GetRoleName().Contains("SUPER ADMINISTRATOR"))
    {
        //<h4><strong>ACCOUNT ROLE : </strong>@ViewBag.NameofRole</h4>
    }
    else
    {
        <h4>@*<strong>ACCOUNT ROLE : </strong>@ViewBag.NameofRole ||*@<strong> REGION : </strong>@ViewBag.RegionName @*||<strong> DISTRICT : </strong>@ViewBag.DistrictName*@</h4>
    }

    <div id="tab-1" class="tab-content current" style="background: #ededed;">
        <div id="dashboard"></div>
    </div>
</div>


<script type="text/javascript">

    let dashboardpath =@Html.Raw(Json.Serialize(ViewBag.GatewayDashboard));
    let baseurl =@Html.Raw(Json.Serialize(ViewBag.baseurl));
    let regionid =@Html.Raw(Json.Serialize(ViewBag.RegionId));
    let districtid =@Html.Raw(Json.Serialize(ViewBag.DistrictId));
    let userrole =@Html.Raw(Json.Serialize(ViewBag.NameofRole));
    let curryr =@Html.Raw(Json.Serialize(ViewBag.CurrentYear));

    $(function (e) {
        $("#dashboard").css({ "width": "100%", "height": "93vh" });
        if (userrole == 'ADMINISTRATOR' || userrole == 'SUPER ADMINISTRATOR') {
            $("#dashboard").ejDashboardViewer({

                ////IBS Office Server Dashboard Url
                //serviceUrl: baseurl+":8080/DashboardService/DashboardService.svc",

                //Local Dashboard Url
                serviceUrl: "http://localhost/DashBoardService/DashboardService.svc",

                dashboardPath: dashboardpath,
                //filterParameters: "Year=" + curryr
            });
        }
        else {
            $("#dashboard").ejDashboardViewer({

                ////IBS Office Server Dashboard Url
                serviceUrl: baseurl+":8080/DashboardService/DashboardService.svc",

                //Local Dashboard Url
                //serviceUrl: "http://localhost/DashBoardService/DashboardService.svc",

                dashboardPath: dashboardpath,
                filterParameters: "RegionId=" + regionid/* + "&& Year=" + curryr*/
            });
        }
    });
</script>


<style>
    body, html, #dashboard {
        height: 100%;
        width: 100%;
    }
    /*  Remove Bottom Scroll content DashBoard View*/
    /* body, html, #dashboard {
        height: 100%;
        width: 100%;
        overflow-y: auto;
    }*/

    .container {
        width: 100%;
        height: 100%;
        margin: 0 auto;
    }

    ul.tabs {
        margin: 0px;
        padding: 0px;
        list-style: none;
    }

        ul.tabs li {
            background: none;
            color: #222;
            display: inline-block;
            padding: 10px 15px;
            cursor: pointer;
        }

            ul.tabs li.current {
                background: #009aef;
                color: #fff;
            }

    .tab-content {
        display: none;
        padding: 15px;
        height: 100%;
        width: 100%;
    }

        .tab-content.current {
            display: inherit;
        }

    #tab-2 {
        background-image: url(Images/devices-sprite.png);
        background-size: 470px;
        background-repeat: no-repeat;
    }
</style>



